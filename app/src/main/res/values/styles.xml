<resources>
    <attr format="reference" name="cardStyle"/>
    <attr format="reference" name="editTextStyleCustom"/>
    <attr format="reference" name="toolbarStyleCustom"/>
    <attr format="reference" name="layoutCustom"/>
    <attr format="reference" name="recyclerCustom"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
        <item name="colorError">@android:color/holo_red_dark</item>
        <item name="colorOnError">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="cardStyle">@style/CardViewCustom</item>
        <item name="editTextStyleCustom">@style/EditTextCustom</item>
        <item name="toolbarStyleCustom">@style/ToolbarCustom</item>
        <item name="layoutCustom">@style/LayoutCustom</item>
        <item name="layoutCustom">@style/LayoutCustom</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorAccentDark</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccentDark</item>
        <item name="colorOnSecondary">@color/colorPrimaryDark</item>
        <item name="colorError">@android:color/holo_red_dark</item>
        <item name="colorOnError">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="cardStyle">@style/CardViewCustom.Dark</item>
        <item name="editTextStyleCustom">@style/EditTextCustom.Dark</item>
        <item name="toolbarStyleCustom">@style/ToolbarCustom.Dark</item>
        <item name="layoutCustom">@style/LayoutCustom.Dark</item>
    </style>

    <style name="LayoutCustom">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="LayoutCustom.Dark">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="ToolbarCustom" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/textColor</item>
    </style>

    <style name="ToolbarCustom.Dark">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="titleTextColor">@color/textColorDark</item>
    </style>

    <style name="CardViewCustom" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/cardColor</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="CardViewCustom.Dark" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/cardColorDark</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="EditTextCustom" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/ui_edittext</item>
        <item name="android:padding">@dimen/element_padding</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="EditTextCustom.Dark">
        <item name="android:background">@drawable/ui_edittext_dark</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_start</item>
    </style>

    <style name="AppTheme.Launcher.Dark" parent="AppTheme.Dark">
        <item name="android:windowBackground">@drawable/bg_start_dark</item>
    </style>

    <style name="TextStatusTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStatusTitle.Settings">
        <item name="android:layout_marginTop">@dimen/settings_padding</item>
        <item name="android:layout_marginLeft">@dimen/screen_padding</item>
        <item name="android:layout_marginRight">@dimen/screen_padding</item>
        <item name="android:layout_marginBottom">@dimen/element_padding</item>
    </style>

    <style name="TextStatusTitle.Small">
        <item name="android:textSize">@dimen/text_size_smaller</item>
    </style>

    <style name="TextStatusContent" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

</resources>
