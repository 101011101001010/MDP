<resources>
    <attr format="reference" name="appEditText"/>
    <attr format="reference" name="speedSlowIconSrc"/>
    <attr format="reference" name="speedFastIconSrc"/>
    <attr format="reference" name="coverageLessIconSrc"/>
    <attr format="reference" name="coverageMoreIconSrc"/>
    <attr format="reference" name="bluetoothIconSrc"/>
    <attr format="reference" name="communicationIconSrc"/>
    <attr format="reference" name="simulationIconSrc"/>
    <attr format="reference" name="changeThemeIconSrc"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
        <item name="colorError">@android:color/holo_red_dark</item>
        <item name="colorOnError">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorBackgroundTheme">@color/colorPrimary</item>
        <item name="colorCardBackground">@color/cardColor</item>
        <item name="appEditText">@style/AppEditText</item>
        <item name="colorAccentTheme">@color/colorAccent</item>
        <item name="colorAccentLighterTheme">@color/colorAccentLighter</item>
        <item name="speedSlowIconSrc">@drawable/ic_speed_slow</item>
        <item name="speedFastIconSrc">@drawable/ic_speed_fast</item>
        <item name="coverageLessIconSrc">@drawable/ic_coverage_less</item>
        <item name="coverageMoreIconSrc">@drawable/ic_coverage_more</item>
        <item name="bluetoothIconSrc">@drawable/ic_bluetooth</item>
        <item name="communicationIconSrc">@drawable/ic_communication</item>
        <item name="simulationIconSrc">@drawable/ic_simulation</item>
        <item name="changeThemeIconSrc">@drawable/ic_change_theme</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorAccentDark</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccentDark</item>
        <item name="colorOnSecondary">@color/colorPrimaryDark</item>
        <item name="colorError">@android:color/holo_red_dark</item>
        <item name="colorOnError">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorBackgroundTheme">@color/colorPrimaryDark</item>
        <item name="colorCardBackground">@color/cardColorDark</item>
        <item name="appEditText">@style/AppEditText.Dark</item>
        <item name="colorAccentTheme">@color/colorAccentDark</item>
        <item name="colorAccentLighterTheme">@color/colorAccentLighterDark</item>
        <item name="speedSlowIconSrc">@drawable/ic_speed_slow_dark</item>
        <item name="speedFastIconSrc">@drawable/ic_speed_fast_dark</item>
        <item name="coverageLessIconSrc">@drawable/ic_coverage_less_dark</item>
        <item name="coverageMoreIconSrc">@drawable/ic_coverage_more_dark</item>
        <item name="bluetoothIconSrc">@drawable/ic_bluetooth_dark</item>
        <item name="communicationIconSrc">@drawable/ic_communication_dark</item>
        <item name="simulationIconSrc">@drawable/ic_simulation_dark</item>
        <item name="changeThemeIconSrc">@drawable/ic_change_theme_dark</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_start</item>
    </style>

    <style name="ArenaGridLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:rowCount">20</item>
        <item name="android:columnCount">15</item>
        <item name="layout_constraintWidth_percent">0.78</item>
        <item name="layout_constraintHeight_percent">0.68</item>
    </style>

    <style name="ArenaGridLayout.Phone">
        <item name="layout_constraintWidth_percent">0.76</item>
        <item name="layout_constraintHeight_percent">0.56</item>
    </style>

    <style name="DataCard" parent="CardView">
        <item name="cardBackgroundColor">?attr/colorCardBackground</item>
        <item name="cardElevation">2dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="DataCard.Toolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">?attr/colorBackgroundTheme</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="DataCard.Main">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginTop">@dimen/element_padding</item>
    </style>

    <style name="DataCard.Main.Small">
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="DataCard.Main.Small.Phone">
        <item name="android:layout_height">46dp</item>
    </style>

    <style name="DataCardInnerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/card_padding</item>
        <item name="android:paddingRight">@dimen/card_padding</item>
        <item name="android:paddingTop">@dimen/card_padding</item>
        <item name="android:paddingBottom">@dimen/card_padding</item>
    </style>

    <style name="DataCardInnerLayout.Main">
        <item name="android:paddingTop">@dimen/element_padding</item>
        <item name="android:paddingBottom">@dimen/element_padding</item>
    </style>

    <style name="UIButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:onClick">clickUiButton</item>
    </style>

    <style name="UIButton.Main">
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>

    <style name="FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">clickUiButton</item>
        <item name="elevation">2dp</item>
        <item name="fabCustomSize">52dp</item>
    </style>

    <style name="FAB.Controller">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="elevation">0dp</item>
        <item name="fabCustomSize">50dp</item>
    </style>

    <style name="ToolbarButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="TextButton" parent="AppTextView.Gray.Title">
        <item name="android:textColor">?attr/colorAccentTheme</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">clickUiButton</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="ToolbarButtonLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/settings_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:onClick">clickUiButton</item>
    </style>

    <style name="AppTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTextView.Toolbar">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTextView.Big">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="AppTextView.Gray">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="AppTextView.Gray.Title">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTextView.Gray.Small">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_smaller</item>
    </style>

    <style name="AppTextView.Gray.Settings">
        <item name="android:layout_marginTop">@dimen/element_padding</item>
        <item name="android:layout_marginLeft">@dimen/screen_padding</item>
        <item name="android:layout_marginRight">@dimen/screen_padding</item>
        <item name="android:layout_marginBottom">@dimen/element_padding</item>
    </style>

    <style name="AppTextView.Gray.Settings.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/settings_padding</item>
        <item name="android:layout_marginLeft">@dimen/screen_padding</item>
        <item name="android:layout_marginRight">@dimen/screen_padding</item>
        <item name="android:layout_marginBottom">@dimen/element_padding</item>
    </style>

    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/element_padding</item>
        <item name="android:background">@drawable/ui_edittext</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="AppEditText.Dark">
        <item name="android:background">@drawable/ui_edittext_dark</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>
</resources>
