<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/window_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/toolbar_divider"
    tools:context=".main.MainActivity">

    <include layout="@layout/addon_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/settings_layout_inner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="@dimen/screen_padding"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_command_strings"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_small" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/element_padding"
                    android:layout_marginBottom="@dimen/element_padding"
                    android:text="@string/settings_command_strings_desc"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/text_size_small" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_padding">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_button"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_small"
                        android:textAllCaps="true"
                        app:layout_constraintWidth_percent="0.4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/settings_command"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_small"
                        android:textAllCaps="true"
                        app:layout_constraintWidth_percent="0.6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_padding">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="@string/main_start_exploration"
                        app:layout_constraintWidth_percent="0.4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <EditText
                        android:id="@+id/settings_edittext_exploration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui_edittext"
                        android:padding="@dimen/element_padding"
                        android:hint="@string/settings_default_exploration"
                        android:textColorHint="@android:color/darker_gray"
                        android:inputType="text"
                        android:lines="1"
                        android:importantForAutofill="no"
                        app:layout_constraintWidth_percent="0.6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_padding">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="@string/main_start_fastest"
                        app:layout_constraintWidth_percent="0.4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <EditText
                        android:id="@+id/settings_edittext_fastest"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui_edittext"
                        android:padding="@dimen/element_padding"
                        app:layout_constraintWidth_percent="0.6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:hint="@string/settings_default_fastest"
                        android:textColorHint="@android:color/darker_gray"
                        android:inputType="text"
                        android:lines="1"
                        android:importantForAutofill="no"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_padding">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="@string/main_pause"
                        app:layout_constraintWidth_percent="0.4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <EditText
                        android:id="@+id/settings_edittext_pause"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui_edittext"
                        android:padding="@dimen/element_padding"
                        app:layout_constraintWidth_percent="0.6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:hint="@string/settings_default_pause"
                        android:textColorHint="@android:color/darker_gray"
                        android:inputType="text"
                        android:lines="1"
                        android:importantForAutofill="no"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_padding">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="@string/main_forward"
                        app:layout_constraintWidth_percent="0.4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <EditText
                        android:id="@+id/settings_edittext_forward"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui_edittext"
                        android:padding="@dimen/element_padding"
                        app:layout_constraintWidth_percent="0.6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:hint="@string/settings_default_forward"
                        android:textColorHint="@android:color/darker_gray"
                        android:inputType="text"
                        android:lines="1"
                        android:importantForAutofill="no"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_padding">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="@string/main_reverse"
                        app:layout_constraintWidth_percent="0.4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <EditText
                        android:id="@+id/settings_edittext_reverse"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui_edittext"
                        android:padding="@dimen/element_padding"
                        app:layout_constraintWidth_percent="0.6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:hint="@string/settings_default_reverse"
                        android:textColorHint="@android:color/darker_gray"
                        android:inputType="text"
                        android:lines="1"
                        android:importantForAutofill="no"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_padding">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="@string/main_turn_left"
                        app:layout_constraintWidth_percent="0.4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <EditText
                        android:id="@+id/settings_edittext_turnleft"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui_edittext"
                        android:padding="@dimen/element_padding"
                        app:layout_constraintWidth_percent="0.6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:hint="@string/settings_default_turn_left"
                        android:textColorHint="@android:color/darker_gray"
                        android:inputType="text"
                        android:lines="1"
                        android:importantForAutofill="no"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/screen_padding">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="@string/main_turn_right"
                        app:layout_constraintWidth_percent="0.4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <EditText
                        android:id="@+id/settings_edittext_turnright"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui_edittext"
                        android:padding="@dimen/element_padding"
                        app:layout_constraintWidth_percent="0.6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:hint="@string/settings_default_turn_right"
                        android:textColorHint="@android:color/darker_gray"
                        android:inputType="text"
                        android:lines="1"
                        android:importantForAutofill="no" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="@dimen/screen_padding"
                android:layout_marginTop="@dimen/screen_padding"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_customise_buttons"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_small" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/element_padding"
                    android:layout_marginBottom="@dimen/element_padding"
                    android:text="@string/settings_customise_buttons_desc"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/text_size_small" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/element_padding">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_button_label"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_small"
                        android:textAllCaps="true"
                        app:layout_constraintWidth_percent="0.4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/settings_command"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_small"
                        android:textAllCaps="true"
                        app:layout_constraintWidth_percent="0.6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/element_padding">

                    <EditText
                        android:id="@+id/settings_edittext_f1_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui_edittext"
                        android:padding="@dimen/element_padding"
                        android:hint="@string/main_f1"
                        android:textColorHint="@android:color/darker_gray"
                        android:inputType="text"
                        android:lines="1"
                        android:importantForAutofill="no"
                        app:layout_constraintWidth_percent="0.36"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <EditText
                        android:id="@+id/settings_edittext_f1_command"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui_edittext"
                        android:padding="@dimen/element_padding"
                        android:hint="@string/main_f1"
                        android:textColorHint="@android:color/darker_gray"
                        android:inputType="text"
                        android:lines="1"
                        android:importantForAutofill="no"
                        app:layout_constraintWidth_percent="0.6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/element_padding">

                    <EditText
                        android:id="@+id/settings_edittext_f2_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui_edittext"
                        android:padding="@dimen/element_padding"
                        android:hint="@string/main_f2"
                        android:textColorHint="@android:color/darker_gray"
                        android:inputType="text"
                        android:lines="1"
                        android:importantForAutofill="no"
                        app:layout_constraintWidth_percent="0.36"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <EditText
                        android:id="@+id/settings_edittext_f2_command"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui_edittext"
                        android:padding="@dimen/element_padding"
                        android:hint="@string/main_f2"
                        android:textColorHint="@android:color/darker_gray"
                        android:inputType="text"
                        android:lines="1"
                        android:importantForAutofill="no"
                        app:layout_constraintWidth_percent="0.6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>