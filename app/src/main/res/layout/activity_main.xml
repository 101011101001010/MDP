<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/window_layout"
    android:focusableInTouchMode="true"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/screen_padding">

        <RelativeLayout
            style="@style/ArenaGridLayout"
            android:id="@+id/gridParent"
            android:layout_marginBottom="@dimen/element_padding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <GridLayout
                style="@style/ArenaGridLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_grid_arena" />
        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            style="@style/UIButton"
            android:id="@+id/settingsButton"
            android:text="@string/settings"
            app:icon="@drawable/ic_settings"
            app:layout_constraintTop_toTopOf="@id/gridParent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gridParent"/>

        <com.google.android.material.button.MaterialButton
            style="@style/UIButton"
            android:id="@+id/startButton"
            android:text="@string/start"
            app:icon="@drawable/ic_start"
            app:layout_constraintTop_toBottomOf="@id/settingsButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gridParent"/>

        <com.google.android.material.button.MaterialButton
            style="@style/UIButton"
            android:id="@+id/plotButton"
            android:text="@string/plot_mode"
            app:icon="@drawable/ic_way_points"
            app:layout_constraintTop_toBottomOf="@id/startButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gridParent"/>

        <com.google.android.material.button.MaterialButton
            style="@style/UIButton"
            android:id="@+id/mapButton"
            android:text="@string/map_options"
            app:icon="@drawable/ic_map"
            app:layout_constraintTop_toBottomOf="@id/plotButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gridParent"/>

        <com.google.android.material.button.MaterialButton
            style="@style/UIButton"
            android:id="@+id/resetButton"
            android:text="@string/reset"
            app:icon="@drawable/ic_nuke"
            app:layout_constraintTop_toBottomOf="@id/mapButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gridParent"/>

        <com.google.android.material.button.MaterialButton
            style="@style/UIButton"
            android:id="@+id/f1Button"
            android:text="@string/f1_default"
            app:icon="@drawable/ic_f1"
            app:layout_constraintTop_toBottomOf="@id/resetButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gridParent" />

        <com.google.android.material.button.MaterialButton
            style="@style/UIButton"
            android:id="@+id/f2Button"
            android:text="@string/f2_default"
            app:icon="@drawable/ic_f2"
            app:layout_constraintTop_toBottomOf="@id/f1Button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gridParent" />

        <androidx.cardview.widget.CardView
            style="?attr/cardStyle"
            android:id="@+id/coordinatesCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/button_padding"
            android:layout_marginBottom="@dimen/element_padding"
            android:layout_marginEnd="2dp"
            app:layout_constraintBottom_toTopOf="@id/timerCard"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gridParent">

            <LinearLayout style="@style/CardViewInnerLayout">
                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextViewCustom.Gray.Title"
                    android:text="@string/coordinates"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextViewCustom.Content"
                    android:id="@+id/coordinatesLabel"
                    android:layout_gravity="center"
                    android:text="@string/coordinates_default" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="?attr/cardStyle"
            android:id="@+id/timerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/button_padding"
            android:layout_marginEnd="2dp"
            app:layout_constraintBottom_toBottomOf="@id/gridParent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gridParent">

            <LinearLayout style="@style/CardViewInnerLayout">
                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextViewCustom.Gray.Title"
                    android:text="@string/timer"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextViewCustom.Content"
                    android:id="@+id/timerLabel"
                    android:layout_gravity="center"
                    android:text="@string/timer_default"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="?attr/cardStyle"
            android:id="@+id/statusCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_padding"
            android:layout_marginStart="2dp"
            app:layout_constraintWidth_percent="0.64"
            app:layout_constraintTop_toBottomOf="@id/timerCard"
            app:layout_constraintLeft_toLeftOf="parent">

            <LinearLayout style="@style/CardViewInnerLayout">
                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextViewCustom.Gray.Title"
                    android:text="@string/status"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextViewCustom.Content"
                    android:id="@+id/statusLabel"
                    android:text="@string/disconnected"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="?attr/cardStyle"
            android:id="@+id/modeCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_padding"
            android:layout_marginEnd="2dp"
            app:layout_constraintWidth_percent="0.34"
            app:layout_constraintTop_toBottomOf="@id/timerCard"
            app:layout_constraintRight_toRightOf="parent">

            <LinearLayout style="@style/CardViewInnerLayout">
                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextViewCustom.Gray.Title"
                    android:text="@string/mode"/>

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextViewCustom.Content"
                    android:id="@+id/modeLabel"
                    android:text="@string/none"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="?attr/cardStyle"
            android:id="@+id/messagesCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_padding"
            android:layout_marginStart="2dp"
            app:layout_constraintWidth_percent="0.64"
            app:layout_constraintTop_toBottomOf="@id/statusCard"
            app:layout_constraintLeft_toLeftOf="parent">

            <LinearLayout style="@style/CardViewInnerLayout">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/element_padding">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextViewCustom.Gray.Title"
                        android:text="@string/messages"/>

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextButton"
                        android:id="@+id/messagesClearButton"
                        android:text="@string/clear" />
                </LinearLayout>

                <ScrollView
                    android:id="@+id/messagesScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="110dp">

                    <TextView
                        android:id="@+id/messagesTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:focusable="false" />
                </ScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="?attr/cardStyle"
            android:id="@+id/messagesInputCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_padding"
            android:layout_marginStart="2dp"
            app:layout_constraintWidth_percent="0.64"
            app:layout_constraintTop_toBottomOf="@id/messagesCard"
            app:layout_constraintLeft_toLeftOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout style="@style/CardViewInnerLayout">
                <EditText
                    style="?attr/editTextStyleCustom"
                    android:id="@+id/messagesOutputEditText"
                    android:hint="@string/messages_send_hint"
                    app:layout_constraintWidth_percent="0.7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:importantForAutofill="no" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/messagesSendButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/send"
                    android:textSize="@dimen/text_size_small"
                    android:onClick="clickSendMessage"
                    app:layout_constraintWidth_percent="0.28"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView style="?attr/cardStyle"
            android:id="@+id/controlPadCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintWidth_percent="0.34"
            app:layout_constraintTop_toTopOf="@id/messagesCard"
            app:layout_constraintBottom_toBottomOf="@id/messagesInputCard"
            app:layout_constraintRight_toRightOf="parent">

            <LinearLayout
                style="@style/CardViewInnerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/swipePadLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/element_padding">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextViewCustom.Gray.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/control_pad"/>

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextButton"
                        android:id="@+id/controlModeButton"
                        android:text="@string/swipe"
                        android:textColor="?attr/colorAccentLighterTheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        style="@style/FabCustom"
                        android:id="@+id/padForwardButton"
                        android:clickable="false"
                        android:src="@drawable/ic_forward"
                        app:fabCustomSize="50dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            style="@style/FabCustom"
                            android:id="@+id/padLeftButton"
                            android:clickable="false"
                            android:layout_marginEnd="24dp"
                            android:src="@drawable/ic_left"
                            app:fabCustomSize="50dp" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            style="@style/FabCustom"
                            android:id="@+id/padRightButton"
                            android:clickable="false"
                            android:layout_marginStart="24dp"
                            android:src="@drawable/ic_right"
                            app:fabCustomSize="50dp" />
                    </LinearLayout>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        style="@style/FabCustom"
                        android:id="@+id/padReverseButton"
                        android:clickable="false"
                        android:src="@drawable/ic_reverse"
                        app:fabCustomSize="50dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/startFabLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/element_padding"
            app:layout_constraintTop_toTopOf="@id/startButton"
            app:layout_constraintBottom_toBottomOf="@id/startButton"
            app:layout_constraintRight_toLeftOf="@id/startButton">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                style="@style/FabCustom"
                android:id="@+id/startExplorationFab"
                android:src="@drawable/ic_explore" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                style="@style/FabCustom"
                android:id="@+id/startFastestPathFab"
                android:layout_marginStart="@dimen/element_padding"
                android:src="@drawable/ic_fastest" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mapFabLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/element_padding"
            app:layout_constraintTop_toTopOf="@id/mapButton"
            app:layout_constraintBottom_toBottomOf="@id/mapButton"
            app:layout_constraintRight_toLeftOf="@id/mapButton">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                style="@style/FabCustom"
                android:id="@+id/saveMapButton"
                android:src="@drawable/ic_save" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                style="@style/FabCustom"
                android:id="@+id/loadMapButton"
                android:layout_marginStart="@dimen/element_padding"
                android:src="@drawable/ic_load" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            style="@style/UIButton.Bottom"
            android:id="@+id/plotObstacleButton"
            android:text="@string/plot_obstacles"
            app:icon="@drawable/ic_plot_obstacles"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/removeObstacleButton"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.button.MaterialButton
            style="@style/UIButton.Bottom"
            android:id="@+id/removeObstacleButton"
            android:layout_marginStart="@dimen/screen_padding"
            android:text="@string/remove_obstacles"
            app:icon="@drawable/ic_remove_obstacles"
            app:layout_constraintTop_toTopOf="@id/plotObstacleButton"
            app:layout_constraintLeft_toRightOf="@id/plotObstacleButton"
            app:layout_constraintRight_toLeftOf="@id/clearObstacleButton"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.button.MaterialButton
            style="@style/UIButton.Bottom"
            android:id="@+id/clearObstacleButton"
            android:layout_marginStart="@dimen/screen_padding"
            android:text="@string/clear_all_obstacles"
            app:icon="@drawable/ic_clear_plots"
            app:layout_constraintTop_toTopOf="@id/plotObstacleButton"
            app:layout_constraintLeft_toRightOf="@id/removeObstacleButton"
            app:layout_constraintRight_toLeftOf="@id/doneButton"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/FabCustom"
            android:id="@+id/doneButton"
            android:layout_marginBottom="@dimen/screen_padding"
            android:layout_marginStart="@dimen/screen_padding"
            android:visibility="gone"
            android:src="@drawable/ic_done"
            app:fabCustomSize="60dp"
            app:layout_constraintTop_toTopOf="@id/plotObstacleButton"
            app:layout_constraintLeft_toRightOf="@id/clearObstacleButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/addon_progress_tint" />
</androidx.constraintlayout.widget.ConstraintLayout>